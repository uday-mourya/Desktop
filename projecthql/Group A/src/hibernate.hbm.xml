<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<!--    1-->
   <class name="com.pojo.MobilePOJO" table="mobile_record">
        <id name="mobileId" type="int">
            <column name="mobile_id" />
            <generator class="identity" />
        </id>

        <property name="brand" type="string">
            <column name="brand" />
        </property>

        <property name="model" type="string">
            <column name="model" />
        </property>

        <property name="storageCapacity" type="int">
            <column name="storage_capacity" />
        </property>

        <property name="ramSize" type="int">
            <column name="ram_size" />
        </property>

        <property name="price" type="float">
            <column name="price" />
        </property>

        <property name="color" type="string">
            <column name="color" />
        </property>
    </class>
    <!--    2-->
    <class name="com.pojo.FruitPOJO" table="fruit">

        <id name="fruitId" type="int">
            <column name="fruit_id" />
            <generator class="identity" />
        </id>

        <property name="name" type="string">
            <column name="name" not-null="true" />
        </property>

        <property name="color" type="string">
            <column name="color" />
        </property>

        <property name="calories" type="int">
            <column name="calories" />
        </property>

        <property name="price" type="float">
            <column name="price" />
        </property>

        <property name="season" type="string">
            <column name="season" />
        </property>

        <property name="description" type="text">
            <column name="description" />
        </property>

    </class>

<!--    3-->
    <class name="com.pojo.FacultyPOJO" table="faculty">

        <id name="facultyId" type="int">
            <column name="faculty_id" />
            <generator class="identity" />
        </id>

        <property name="firstName" type="string">
            <column name="first_name" length="50" not-null="true" />
        </property>

        <property name="lastName" type="string">
            <column name="last_name" length="50" not-null="true" />
        </property>

        <property name="email" type="string">
            <column name="email" length="100" not-null="true" />
        </property>

        <property name="phoneNumber" type="string">
            <column name="phone_number" length="15" />
        </property>

        <property name="department" type="string">
            <column name="department" length="50" />
        </property>

        <property name="salary" type="double">
            <column name="salary" not-null="true" />
        </property>

    </class>
<!--    4-->
    <class name="com.pojo.Person" table="person">

        <id name="personId" type="int">
            <column name="person_id" />
            <generator class="identity" />
        </id>

        <property name="firstName" type="string">
            <column name="first_name" not-null="true" />
        </property>

        <property name="lastName" type="string">
            <column name="last_name" not-null="true" />
        </property>

        <property name="dateOfBirth" type="date">
            <column name="date_of_birth" />
        </property>

        <property name="email" type="string">
            <column name="email" />
        </property>

        <property name="phoneNumber" type="string">
            <column name="phone_number" />
        </property>

        <property name="address" type="string">
            <column name="address" />
        </property>

    </class>
    <!--    5-->
    <class name="com.pojo.Product" table="product">
        <id name="productId" column="product_id">
            <generator class="identity"/>
        </id>

        <property name="productName" column="product_name" not-null="true"/>
        <property name="category" column="category"/>
        <property name="description" column="description"/>
        <property name="price" column="price" not-null="true"/>
        <property name="quantityInStock" column="quantity_in_stock" not-null="true"/>

    </class>
    <!--    6-->
    <class name="com.pojo.AccountPOJO" table="bank_account">
        <id name="id" column="id">
            <generator class="assigned"/>
        </id>
        <property name="remainingBalance" column="remaining_balance" />
        <property name="accNumber" column="account_number" />
        <property name="ifscCode" column="ifsc_code" />
        <property name="branch" column="branch" />
        <property name="holderName" column="holder_name" />
        <property name="accType" column="account_type" />
        <property name="openingDate" column="opening_date" />
    </class>
    <!--    7-->
     <class name="com.pojo.Animal" table="animal">
        <id name="animalId" type="int">
            <column name="animal_id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="name" />
        </property>
        <property name="breed" type="string">
            <column name="breed" />
        </property>
        <property name="color" type="string">
            <column name="color" />
        </property>
        <property name="weight" type="string">
            <column name="weight" />
        </property>
    </class>
    <!--    8-->
    <class name="com.pojo.Student" table="student">
        <id name="studentId" type="int">
            <column name="student_id" />
            <generator class="identity" />
        </id>

        <property name="firstName" type="string">
            <column name="first_name" not-null="true" />
        </property>

        <property name="lastName" type="string">
            <column name="last_name" not-null="true" />
        </property>

        <property name="dateOfBirth" type="date">
            <column name="date_of_birth" />
        </property>

        <property name="gender" type="string">
            <column name="gender" />
        </property>

        <property name="email" type="string">
            <column name="email" unique="true" />
        </property>

        <property name="phoneNumber" type="string">
            <column name="phone_number" />
        </property>

        <property name="address" type="text">
            <column name="address" />
        </property>

        <property name="enrollmentDate" type="date">
            <column name="enrollment_date" />
        </property>
    </class>
<!--    9-->
<class name="com.pojo.EmployeePOJO" table="employee">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="salary" column="salary" />
        <property name="experience" column="experience" />
        <property name="name" column="name" />
        <property name="position" column="position" />
        <property name="companyName" column="company_name" />
        <property name="address" column="address" />
    </class>
    <class name="com.pojo.VehiclePOJO" table="vehicle">
        <id name="id" type="int">
            <column name="id" />
            <generator class="increment" />
        </id>

        <property name="price" type="int">
            <column name="price" />
        </property>

        <property name="maxSpeed" type="int">
            <column name="max_speed" />
        </property>

        <property name="name" type="string">
            <column name="name" />
        </property>

        <property name="brand" type="string">
            <column name="brand" />
        </property>

        <property name="type" type="string">
            <column name="type" />
        </property>

        <property name="fuel" type="string">
            <column name="fuel" />
        </property>

        <property name="transmission" type="string">
            <column name="transmission" />
        </property>
    </class>
</hibernate-mapping>

