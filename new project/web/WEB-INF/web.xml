<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>InsertProductTask</servlet-name>
        <servlet-class>com.employee.controller.InsertProductTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginTask</servlet-name>
        <servlet-class>com.employee.controller.LoginTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationTask</servlet-name>
        <servlet-class>com.employee.controller.RegistrationTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertProductTask</servlet-name>
        <url-pattern>/InsertProductTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginTask</servlet-name>
        <url-pattern>/LoginTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationTask</servlet-name>
        <url-pattern>/RegistrationTask</url-pattern>
    </servlet-mapping>
</web-app>
